@inject NavigationManager NavigationManager
@inject DialogService ds

<div id="container">

    <header>
        <_Header Title=@TitleName></_Header>
    </header>

    <article>
        <div id="flex-container" class="myClss">
            @foreach (var item in _kotPendingTableModels)
